<div class="container">
    <div class="row">

        <div class="col-2">
        </div>

        <div class="col-6">
            <h3 class="subtitle">Approve Post</h3>
            {{#unless approvalList}}
            <div class="alert alert-success">All posts Approved.</div>
            {{/unless}}
            <div id="pendingposts">
                {{#each approvalList}}
                <div class="card adminCard">
                    <div class="card-body" id="pendingpost">
                        <div id="postinfo">
                            <span>{{name}}</span>
                            <hr>
                            <span>{{description}}</span>
                            <br>
                            <span>city : {{city}}</span>
                            <span> state : {{state}}</span>
                        </div>
                    </div>
                    <span class="adminButtons">
                        <button type="button" class="btn btn-primary btn-sm approve" id="{{id}}">Approve</button>
                        <button type="button" class="btn btn-secondary btn-sm delete" id="{{id}}">Delete</button>
                    </span>
                </div>

                {{/each}}
            </div>
        </div>

        <div class="col-4">
            <h3 class="subtitle">Happening this Weekend</h3>
            <div id="weekend">
                <div class="event" id="data[i].title">
                    <h6 class="eventTitle">Title</h6>
                    <img class="eventImg" src="https://images1.phoenixnewtimes.com/imager/u/745xauto/9814688/jr-blackcloud-cophxart.jpg" alt=""
                        height="80px">
                    <div class="eventDes">Description</div>
                    <div class="eventAddress">Address</div>
                    <a href="#" class="weblink eventLink" target="_blank">Link</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>